{
  "name": "sf-ui-kit",
  "version": "1.0.0",
  "description": "superformula test web stack UI KIT",
  "files": [
    "build"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@storybook/addon-actions": "6.3.8",
    "@storybook/addon-essentials": "6.3.8",
    "@storybook/addon-links": "6.3.8",
    "@storybook/react": "6.3.8",
    "@testing-library/dom": "^8.1.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/react-test-renderer": "^17.0.1",
    "@types/styled-components": "^5.1.12",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.31.2",
    "babel-loader": "^8.2.2",
    "cache-loader": "^4.1.0",
    "copy-webpack-plugin": "^9.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "plop": "^2.7.4",
    "prettier": "^2.3.2",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-prettier": "^1.2.0",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-loader": "8.3.0"
  },
  "dependencies": {
    "dotenv": "^14.2.0",
    "framer-motion": "^2.2.0",
    "mapbox-gl": "^2.6.1",
    "polished": "^3.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-mapbox-gl": "^5.1.1",
    "react-mapbox-gl-geocoder": "^1.1.0",
    "styled-components": "^5.3.0",
    "typescript": "^4.4.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "never",
        [
          "start-case",
          "pascal-case"
        ]
      ]
    }
  },
  "lint-staged": {
    "./src/components/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E  HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "compile": "tsc -p",
    "test": "jest --updateSnapshot",
    "coverage": "jest --coverage",
    "lint": "tsc --noEmit && eslint src/**/*.ts{,x}",
    "lint-fix": "tsc --noEmit && eslint src/**/*.ts{,x} --quiet --fix",
    "lint:css": "stylelint './src/components/**/*.tsx'",
    "prettier": "prettier --write src/**/*.ts{,x}",
    "prettier:fix": "prettier --write 'src/**/*.tsx'",
    "generate": "plop --plopfile ./.plop/plop.config.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "pre-commit": "lint-staged"
  }
}
